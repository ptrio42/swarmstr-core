{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src/",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
  ],
  "types": ["typePatches"]
}